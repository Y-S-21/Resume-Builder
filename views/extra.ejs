                                <tr><td><label style="padding-right: 50px;" for="">Date</label></td><td><input style="width: 250px;" class="input form-control"  type="date" name="extraDate[]" id="" autocomplete="off" required></td></tr>
                                <tr><td><label style="padding-right: 50px;" for="">Topic</label></td><td><input size="25" class="input form-control" type="text" name="extraTopic[]" id="" autocomplete="off" required></td></tr>
                            </table>
                            <div class="input-group-append">                
                                <button style="position: relative;top: 10.1rem;" id="removeRow1" type="button" class="removeButton btn btn-danger">Remove</button>
                            </div>
                        </div>
                    </div>
                    <div id="newRow1"></div>
                    <button id="addRow1" type="button" class="btn btn-info">Add Row</button>
                </div>
            </div>
        </div>
    
        <!-- Key Strength -->

        <h2 style="margin: 15px 3px;">Key Strength</h2>
    
        <div class="row">
            <div class="col-lg-12">
                <div id="inputFormRow2">
                    <div class="input-group mb-3">
                        <ul>
                            <li><input size="70" type="text" name="keyStrength[]" class="form-control input" autocomplete="off" required></li>
                        </ul>
                        <div class="input-group-append">                
                            <button id="removeRow2" type="button" class="removeButton btn btn-danger">Remove</button>
                        </div>
                    </div>
                </div>
    
                <div id="newRow2"></div>
                <button id="addRow2" type="button" class="btn btn-info">Add Row</button>
            </div>
        </div>

        <h2 style="margin: 15px 3px;">Achievements</h2>
    
        <div class="row">
            <div class="col-lg-12">
                <div id="inputFormRow3">
                    <div class="input-group mb-3">
                        <ul>
                            <li><input size="70" type="text" name="achievements[]" class="form-control input" autocomplete="off" required></li>
                        </ul>
                        <div class="input-group-append">                
                            <button id="removeRow3" type="button" class="removeButton btn btn-danger">Remove</button>
                        </div>
                    </div>
                </div>
                <div id="newRow3"></div>
                <button id="addRow3" type="button" class="btn btn-info">Add Row</button>
            </div>
        </div>

        <div style="margin-top: 15px;">
            <button type="submit" class="button">submit</button>
        </div>
    </form>
</div>

