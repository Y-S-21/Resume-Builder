<%- include("partials/header") -%>

<div class="heading"><h1>Other Info</h1></div>

<div class="main">
    <form action="/extraInfo" method="post">

        <!-- Career Objective -->
        
            <h2 style="margin: 15px 3px;">Career Objective</h2>
        
        <div style="display: inline-block; margin-left: 1rem;">
            <textarea style="margin-left: 80px;" class="input form-control" id="" name="careerObj" rows="2" cols="70" autocomplete="off" required></textarea>
        </div>
        
        <!-- Co - curicular Activities -->

        <h2 style="margin: 15px 3px;">Co-Curricular activities</h2>
    
        <div>
            <div class="row">
                <div class="col-lg-12">
                    <div id="inputFormRow">
                        <div class="input-group mb-3">
                            <table>
                                <tr><td><label style="padding-right: 50px;" for="">Name of the Event</label></td><td><input size="25" class="input form-control" type="text" name="coCurEvent[]" id="" autocomplete="off" required></td></tr>
                                <tr><td><label style="padding-right: 50px;" for="">College Name</label></td><td><input size="25" class="input form-control" type="text" name="coCurClgName[]" id="" autocomplete="off" required></td></tr>
                                <tr><td><label style="padding-right: 50px;" for="">Date</label></td><td><input style="width: 250px;" class="input form-control"  type="date" name="coCurDate[]" id="" autocomplete="off" required></td></tr>
                                <tr><td><label style="padding-right: 50px;" for="">Topic</label></td><td><input size="25" class="input form-control" type="text" name="coCurTopic[]" id="" autocomplete="off" required></td></tr>
                            </table>
                            <div class="input-group-append">                
                                <button style="position: relative;top: 10.1rem;" id="removeRow" type="button" class="removeButton btn btn-danger">Remove</button>
                            </div>
                        </div>
                    </div>
                    <div id="newRow"></div>
                    <button id="addRow" type="button" class="btn btn-info">Add Row</button>
                </div>
            </div>
        </div>

        <!-- EXTRA CURRICULAR -->

        <h2 style="margin: 15px 3px;">Extra-Curricular activities</h2>
    
        <div>
            <div class="row">
                <div class="col-lg-12">
                    <div id="inputFormRow1">
                        <div class="input-group mb-3">
                            <table>
                                <tr><td><label style="padding-right: 50px;" for="">Name of the Event</label></td><td><input size="25" class="input form-control" type="text" name="extraEvent[]" id="" autocomplete="off" required></td></tr>
